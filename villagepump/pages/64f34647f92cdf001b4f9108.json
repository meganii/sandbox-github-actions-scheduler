    },
    {
      "id": "64f3465fe5172d0000b80db4",
      "text": "[エクスポージャー療法]",
      "userId": "5c30ba88e98efe0017e5172d",
      "created": 1693664863,
      "updated": 1693664863
    },
    {
      "id": "64f3467de5172d0000b80db5",
      "text": "",
