      "created": 1744647511,
      "updated": 1744647511
    },
    {
      "id": "680b8d090000000000d057ee",
      "text": "例",
      "userId": "5d69dde930e3c500170f1ffd",
      "created": 1745587466,
      "updated": 1745587468
    },
    {
      "id": "680b8d0b0000000000d057f0",
      "text": "\t[抑圧]",
      "userId": "5d69dde930e3c500170f1ffd",
      "created": 1745587468,
      "updated": 1745587471
    },
    {
      "id": "680b8d0f0000000000d057f1",
      "text": "\t[投影]",
      "userId": "5d69dde930e3c500170f1ffd",
      "created": 1745587472,
      "updated": 1745587474
    },
    {
      "id": "680b8d120000000000d057f2",
      "text": "\t[取り入れ]",
      "userId": "5d69dde930e3c500170f1ffd",
      "created": 1745587475,
      "updated": 1745587477
    },
    {
      "id": "680b8d150000000000d057f3",
      "text": "\t[退行]",
      "userId": "5d69dde930e3c500170f1ffd",
      "created": 1745587478,
      "updated": 1745587480
    },
    {
      "id": "680b8d2c0000000000d057f4",
      "text": "\t[合理化]",
      "userId": "5d69dde930e3c500170f1ffd",
      "created": 1745587501,
      "updated": 1745587519
    },
    {
      "id": "680b8db10000000000d057f8",
      "text": "\t\t[酸っぱいブドウ]",
      "userId": "5d69dde930e3c500170f1ffd",
      "created": 1745587634,
      "updated": 1745587634
    },
    {
      "id": "680b8d400000000000d057f5",
      "text": "\t[同一視]",
      "userId": "5d69dde930e3c500170f1ffd",
      "created": 1745587520,
      "updated": 1745587522
    },
    {
      "id": "680b8d420000000000d057f6",
      "text": "\t[攻撃]",
      "userId": "5d69dde930e3c500170f1ffd",
      "created": 1745587523,
      "updated": 1745587526
    },
    {
      "id": "680b8d460000000000d057f7",
      "text": "\t[自虐]",
      "userId": "5d69dde930e3c500170f1ffd",
      "created": 1745587527,
      "updated": 1745587529
    },
