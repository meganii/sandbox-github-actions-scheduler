    },
    {
      "id": "67fd35550000000000e6d3ad",
      "text": "[defence] mechanism",
      "userId": "5d69dde930e3c500170f1ffd",
      "created": 1744647509,
      "updated": 1744647512
    },
    {
      "id": "67fd35590000000000e6d3af",
      "text": "[フロイト]",
      "userId": "5d69dde930e3c500170f1ffd",
      "created": 1744647514,
      "updated": 1744647516
    },
    {
      "id": "67fd35560000000000e6d3ae",
