    },
    {
      "id": "66911f3471b3c200003a8364",
      "text": "対義語:[Scrapbox]",
      "userId": "661b6e882a96e9002371b3c2",
      "created": 1720786738,
      "updated": 1720786744
    },
    {
      "id": "664891c071b3c20000765a11",
