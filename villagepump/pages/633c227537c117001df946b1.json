    },
    {
      "id": "633c2278e600350000b72fdc",
      "text": "関連項目",
      "userId": "62a91a7a083437001de60035",
      "created": 1664885369,
      "updated": 1664885369
    },
    {
      "id": "633c2278e600350000b72fdd",
      "text": "　[信頼できない語り手]",
      "userId": "62a91a7a083437001de60035",
      "created": 1664885369,
      "updated": 1664885369
    },
    {
      "id": "633c2278e600350000b72fde",
      "text": "　[群盲象を評す]",
      "userId": "62a91a7a083437001de60035",
