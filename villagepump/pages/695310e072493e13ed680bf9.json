    {
      "id": "6954834c00000000002b88e7",
      "text": "2025/12/31",
      "userId": "582e63d27c56960011aff09e",
      "created": 1767146319,
      "updated": 1767146319
    },
    {
      "id": "6954834e00000000002b88ea",
      "text": "\thttps://github.com/digitaldemocracy2030/broad-listening-book/blob/main/column/レビューで試す広聴AI.md",
      "userId": "582e63d27c56960011aff09e",
