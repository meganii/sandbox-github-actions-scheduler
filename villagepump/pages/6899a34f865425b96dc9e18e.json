      "userId": "58a90dd3ee5de7001150db17",
      "created": 1754899279,
      "updated": 1754899279
    },
    {
      "id": "6899a34f0000000000e232cb",
      "text": "https://business.nikkei.com/atcl/report/16/061100222/110900014/",
