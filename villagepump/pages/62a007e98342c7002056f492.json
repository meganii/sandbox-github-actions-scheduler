    {
      "id": "62a0094079d3a90000f0fd43",
      "text": "[dummy_member]として使えるようにしたい",
      "userId": "5a4873ab2e26fb001479d3a9",
      "created": 1654655297,
      "updated": 1654655302
    },
    {
      "id": "62a0092379d3a90000f0fd40",
      "text": "",
      "userId": "5a4873ab2e26fb001479d3a9",
      "created": 1654655267,
